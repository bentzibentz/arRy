{
  "name": "arry",
  "version": "0.0.1",
  "description": "arRy is a modular ES6 simplified array modification library.",
  "repository": {
    "type": "git",
    "url": "git@github.com:bentzibentz/arrAy.git"
  },
  "author": {
    "name": "Fabian Bentz",
    "url": "https://www.fabianbentz.com",
    "email": "info@fabianbentz.de"
  },
  "license": "MIT",
  "keywords": [
    "array",
    "javascript",
    "simplify",
    "modification",
    "es6"
  ],
  "main": "dist/arRy.js",
  "browser": "dist/arRy.min.js",
  "module": "dist/arRy.mjs",
  "test": "test/arRy.mjs",
  "files": [
    "dist/**/*"
  ],
  "browserslist": [
    "Chrome 49",
    "Edge 15",
    "Firefox 52",
    "IE 11",
    "Safari 10.1"
  ],
  "xo": {
    "space": 4,
    "rules": {
      "unicorn/prefer-node-append": "off",
      "unicorn/prefer-query-selector": "off"
    },
    "ignores": [
      "examples/**/*.js",
      "karma.conf.js",
      "test/index.js"
    ],
    "globals": [
      "assert"
    ],
    "envs": [
      "node",
      "browser",
      "mocha"
    ]
  },
  "scripts": {
    "build": "rollup --config && npm run size",
    "build:test": "rollup --config=test/rollup.config.js --file=test/build.js test/index.js",
    "dev": "karma start",
    "lint": "xo",
    "size": "size-limit --limit 2.8KB dist/arRy.js",
    "test": "npm run lint && karma start --single-run",
    "test:browserstack": "npm run build:test && browserstack-runner",
    "watch": "rollup --config --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "browserstack-runner": "^0.9.0",
    "chai": "^4.2.0",
    "karma": "^4.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-firefox-launcher": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-rollup-preprocessor": "^7.0.2",
    "mocha": "^6.2.1",
    "rollup": "^1.22.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-clean": "^1.0.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "simulant": "^0.2.2",
    "size-limit": "^1.3.8",
    "xo": "^0.25.3"
  },
  "dependencies": {
    "@bundled-es-modules/uuid": "^3.3.2"
  },
  "directories": {
    "test": "test"
  }
}
